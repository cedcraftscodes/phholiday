<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/campuscard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/holiday_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Holiday Name"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/holiday_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/holiday_name"
                android:padding="8dp"
                android:text="Holiday Date"
                android:textColor="#666"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/holiday_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/holiday_date"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Holiday Week Date"
                android:textColor="#666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/holiday_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/holiday_weekday"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Availability"
                android:textColor="#666"
                android:textSize="14dp" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>